<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_food"
    android:layout_height="match_parent"
    tools:context="com.example.vuanhlevis.orderfoods.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9b000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/tv_slogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/slogan"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:weightSum="2"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout">

            <Button
                android:id="@+id/bt_signup"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/background_bt_register"
                android:text="SIGN UP"
                android:textColor="#d8000000"
                android:layout_margin="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bt_signin"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/background_bt_login"
                android:text="SIGN IN"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:layout_height="wrap_content" />



        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
